<%- include('layouts/header') %>


<!-- search -->
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <!-- Search result -->
                <div class="wrap__search-result">
                    <div class="wrap__search-result-keyword">
                        <h5>Որոնման արդյունքները՝ <span class="text-primary">"<%= searched_name %>"</span> բառով գտնվել
                            է
                            <%= count_of_posts %> նորություն. </h5>
                    </div>
                    <% if(searched_items) { %>
                        <% searched_items.forEach(i => { %>
                            <!-- Post Article List -->
                            <div class="card__post card__post-list card__post__transition mt-30">
                                <div class="row ">
                                    <div class="col-md-5">
                                        <div class="card__post__transition">
                                            <a href="/article-detail/<%= i.id %>">
                                                <img src="/uploads/<%= i.avatar[0] %>" class="img-fluid w-100" alt="">
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-md-7 my-auto pl-0">
                                        <div class="card__post__body ">
                                            <div class="card__post__content  ">
                                                <div class="card__post__title">
                                                    <h5>
                                                        <a href="/article-detail/<%= i.id %>">
                                                            <%= i.title %>
                                                        </a>
                                                    </h5>
                                                    <!--                                                    <p class="d-none d-lg-block d-xl-block mb-0">-->
                                                    <!--                                                        Maecenas accumsan tortor ut velit pharetra mollis. Proin eu nisl et-->
                                                    <!--                                                        arcu-->
                                                    <!--                                                        iaculis placerat-->
                                                    <!--                                                        sollicitudin ut est. In fringilla dui dui.-->
                                                    <!--                                                    </p>-->
                                                </div>
                                                <div class="card__post__category ">
                                                    <%= i.category %>
                                                </div>
                                                <div class="card__post__author-info mb-2">
                                                    <ul class="list-inline">
                                                        <li class="list-inline-item">
                                                        <span class="text-primary">
                                                            by <%= i.author %>
                                                        </span>
                                                        </li>
                                                        <li class="list-inline-item">
                                                        <span class="text-dark text-capitalize">
                                                            <%= i.created_at %>
                                                        </span>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>

                    <% } %>
                </div>

                <!-- Pagination -->
                <% if (pages > 0) { %>
                    <div class="pagination wow fadeIn animated" data-wow-duration="2s" data-wow-delay="0.5s"
                         style="visibility: visible; animation-duration: 2s; animation-delay: 0.5s; animation-name: fadeIn;">
                        <% if (current == 1) { %>
                            <a>First</a>
                        <% } else { %>
                            <a href="/search-result/1?search=<%= searched_name %>">First</a>
                        <% } %>
                        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                        <% if (i !== 1) { %>
                            <a>...</a>
                        <% } %>
                        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                            <% if (i == current) { %>
                                <a><%= i %></a>
                            <% } else { %>
                                <a href="/search-result/<%= i %>/?search=<%= searched_name %>"><%= i %></a>
                            <% } %>
                            <% if (i == Number(current) + 4 && i < pages) { %>
                                <a>...</a>
                            <% } %>
                        <% } %>
                        <% if (current == pages) { %>
                            <a>Last</a>
                        <% } else { %>
                            <a href="/search-result/<%= pages %>?search=<%= searched_name %>">Last</a>
                        <% } %>
                    </div>
                <% } %>
            </div>

        </div>
    </div>
</section>
<!-- end search -->


<%- include('layouts/footer') %>