<%- include('layouts/Wrapper') %>

<div id="content-wrapper">
    <div class="container-fluid">
        <!-- DataTables Example -->
        <div class="card mb-3">
            <div class="card-body">
                <div class="edit">
                    <form class="modal-content" action="/admin-news/edit" method="POST">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <!-- <h4 class="modal-title">Modal Header</h4> -->
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="">Title:</label>
                                <input type="text" class="form-control" name="title" value="<%= news.title %>">
                            </div>
                            <div class="form-group">
                                <label for="">Description:</label>
                                <textarea class="form-control" name="description"><%= news.description %></textarea>
                            </div>
                            <div class="form-group">
                                <label for="category">Category:</label>
                                <select name="category" id="category" class="form-control">
                                    <option value="<%= news.category %>" selected disabled><%= news.category %></option>
                                    <% category.forEach(i => {%>
                                        <option value="<%= i.category %>"><%= i.category %></option>
                                    <%}) %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="tag">Tag</label>
                                <input type="text" class="form-control" id="tag" name="tag" value="<%= news.tag %>">
                            </div>
                            <div class="form-group">
                                <label for="author">Author</label>
                                <input type="text" class="form-control" id="author" name="author"
                                       value="<%= news.author %>">
                            </div>
                            <div class="form-group">
                                <label for="video">Video</label>
                                <input type="text" class="form-control" id="video" name="video"
                                       value="<%= news.video %>">
                            </div>
                            <div class="form-group">
                                <div>
                                    <label for="">Add to Header news</label>
                                    <input type="radio" name="header_news" value="1">
                                </div>
                                <div>
                                    <label for="">Delete from Header news</label>
                                    <input type="radio" name="header_news" value="0">
                                </div>
                            </div>
                            <div class="form-group">
                                <div>
                                    <label for="">Add to Special news</label>
                                    <input type="radio" name="special" value="1">
                                </div>
                                <div>
                                    <label for="">Delete from Special news</label>
                                    <input type="radio" name="special" value="0">
                                </div>
                            </div>
                            <div class="form-group">
                                <div>
                                    <label for="">Add to Popular news</label>
                                    <input type="radio" name="popular" value="1">
                                </div>
                                <div>
                                    <label for="">Delete from Popular news</label>
                                    <input type="radio" name="popular" value="0">
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <input type="hidden" name="id" value="<%= news._id %>">
                            <button type="submit" class="btn btn-primary">Edit</button>
                            <a href="/admin-news" class="btn btn-default" data-dismiss="modal">Close</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->

</div>

<%- include('layouts/dashboard-footer') %>