<%- include('layouts/Wrapper') %>

<div id="content-wrapper">

    <div class="container-fluid">

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Վահանակ</a>
            </li>
            <li class="breadcrumb-item active">Օգտատերեր</li>
        </ol>

        <!-- DataTables Example -->
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table"></i>
                Օգտատերերի տվյալներ
                <button type="button" class="btn btn-small btn-primary" data-toggle="modal"
                        data-target="#myModal" style="margin: 0px 5px;">Ավելացնել օգտատեր
                </button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>Էլ․ հասցե</th>
                            <th>Գաղտնաբառ</th>
                            <th>Ջնջել</th>
                        </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <th>Էլ․ հասցե</th>
                            <th>Գաղտնաբառ</th>
                            <th>Ջնջել</th>
                        </tr>
                        </tfoot>
                        <tbody>
                        <% users.forEach(i => { %>
                            <tr>
                                <td> <%= i.email %></td>
                                <td><%= i.password %></td>
                                <td>
                                    <form action="/admin-users/delete" method="POST">
                                        <input type="hidden" name="id" value="<%= i.id %>">
                                        <button class="btn btn-danger">Ջնջել</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div> -->
        </div>
    </div>
    <!-- /.container-fluid -->

</div>
<!-- /.content-wrapper -->

</div>
