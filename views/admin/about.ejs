<%- include('layouts/Wrapper') %>

<div id="content-wrapper">

    <div class="container-fluid">

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Վահանակ</a>
            </li>
            <li class="breadcrumb-item active">Մեր մասին</li>
        </ol>

        <!-- DataTables Example -->
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table"></i>
                Մեր մասին էջի տվյալներ
            </div>
            <div class="card-body">
                <div class="about-images-field row">
                    <% images.forEach(i => { %>
                        <div class="about-img col-md-3">
                            <img src="/uploads/<%= i.avatar %>" alt="">
                            <form class="remove-about-imgs" method="POST" action="/admin-about/delete">
                                <input type="hidden" name="id" value="<%= i.id %>">
                                <button><i class="fa fa-times" aria-hidden="true"></i></button>
                            </form>
                        </div>
                    <% }) %>
                </div>
            </div>
            <div class="card-body">
                <div class="form-group field">
                    <form action="/admin-about/logo" method="POST" accept="image/x-png,image/gif,image/jpeg"
                          enctype="multipart/form-data">
                        <div>
                            <label for="">Մեր մասին էջի նկարներ</label>
                            <br>
                            <input type="file" name="avatar">
                        </div>
                        <div>
                            <button class="btn btn-primary" type="submit">Add</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="card-body">
                <form action="/admin-about/description" method="POST">
                    <div>
                        <label for="description">Նկարագրություն</label>
                        <textarea name="description" class="form-control"><%= about[0].description %></textarea>
                    </div>
                    <div>
                        <input type="hidden" value="<%= about[0].id %>" name="id">
                        <button class="btn btn-primary" type="submit">Edit</button>
                    </div>
                </form>
            </div>
            <!-- <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div> -->
        </div>
    </div>
    <!-- /.container-fluid -->

</div>
<!-- /.content-wrapper -->

</div>
<!-- /#wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"></h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Չեղարկել</button>
                <a class="btn btn-primary" href="/login/logout">Դուրս գալ</a>
            </div>
        </div>
    </div>
</div>


<%- include('layouts/dashboard-footer') %>