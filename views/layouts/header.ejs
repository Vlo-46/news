<header class="bg-light">
    <!-- Navbar  Top-->
    <div class="topbar d-none d-sm-block">
        <div class="container ">
            <div class="row">
                <div class="col-sm-12 col-md-5">
                    <div class="topbar-left">
                        <div class="topbar-text">

                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-7">
                    <div class="list-unstyled topbar-right">
                        <ul class="topbar-link">
                            <li><a href="/contact" title="">Կապ</a></li>
                        </ul>
                        <ul class="topbar-sosmed">
                            <li>
                                <a href=""><i class="fa fa-facebook"></i></a>
                            </li>
                            <li>
                                <a href=""><i class="fa fa-twitter"></i></a>
                            </li>
                            <li>
                                <a href=""><i class="fa fa-instagram"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Navbar Top  -->
    <!-- Navbar  -->
    <!-- Navbar menu  -->
    <div class="navigation-wrap navigation-shadow bg-white">
        <nav class="navbar navbar-hover navbar-expand-lg navbar-soft">
            <div class="container">
                <div class="offcanvas-header">
                    <div data-toggle="modal" data-target="#modal_aside_right" class="btn-md">
                        <span class="navbar-toggler-icon"></span>
                    </div>
                </div>
                <figure class="mb-0 mx-auto">
                    <a href="/">
                        <img src="/uploads/<%= logo[0].avatar %>" alt="" class="img-fluid logo" style="height: 50px">
                    </a>
                </figure>
                <div class="collapse navbar-collapse justify-content-between" id="main_nav99">
                    <ul class="navbar-nav ml-auto ">
                        <li class="nav-item dropdown">
                            <a class="nav-link active" href="/">Գլխավոր</a>
                        </li>
                        <li class="nav-item dropdown has-megamenu">
                            <a class="nav-link dropdown-toggle" href="/urgently/1">
                                Նորություններ </a>
                            <div class="dropdown-menu animate fade-down megamenu mx-auto" role="menu">
                                <div class="container wrap__mobile-megamenu">
                                    <div class="col-megamenu">
                                        <h5 class="title">Վերջին նորություններ</h5>
                                        <hr>
                                        <!-- Popular news carousel -->
                                        <div class="popular__news-header-carousel">
                                            <div class="top__news__slider">
                                                <% urgently_news.forEach(i => { %>
                                                    <div class="item">
                                                        <!-- Post Article -->
                                                        <div class="card__post card__post-list">
                                                            <div class="image-sm">
                                                                <a href="/article-detail/<%= i.id %>">
                                                                    <img src="/uploads/<%= i.avatar[0] %>" class="img-fluid" alt="" style="height: 100%">
                                                                </a>
                                                            </div>
                                                            <div class="card__post__body ">
                                                                <div class="card__post__content">
                                                                    <div class="card__post__title">
                                                                        <h6>
                                                                        <a href="/article-detail/<%= i.id %>">
                                                                                <%= i.title %>
                                                                            </a>
                                                                        </h6>
                                                                    </div>
                                                                    <div class="card__post__author-info mb-2">
                                                                        <ul class="list-inline">
                                                                            <li class="list-inline-item">
                                                                                <i class="fa fa-calendar-check-o" aria-hidden="true"></i>
                                                                                <span class="text-dark text-capitalize date">
                                                                                    <%= i.created_at %>
                                                                                </span>
                                                                            </li>

                                                                        </ul>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                <% }) %>
                                            </div>
                                        </div>
                                    </div> <!-- col-megamenu.// -->
                                </div>
                            </div> <!-- dropdown-mega-menu.// -->
                        </li>
                        <li class="nav-item"><a class="nav-link" href="/category/1"> Լուրեր </a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link active" href="/about">Մեր մասին </a>
                        </li>
                        <li class="nav-item"><a class="nav-link" href="/contact"> Կապ </a></li>
                    </ul>


                    <!-- Search bar.// -->
                    <ul class="navbar-nav ">
                        <li class="nav-item search hidden-xs hidden-sm "><a class="nav-link" href="homepage-v1.html#">
                                <i class="fa fa-search"></i>
                            </a>
                        </li>
                    </ul>
                    <!-- Search content bar.// -->
                    <div class="top-search navigation-shadow">
                        <div class="container">
                            <div class="input-group ">
                                <form action="/search-result/1" method="GET">
                                    <div class="row no-gutters mt-3">
                                        <div class="col">
                                            <input class="form-control border-secondary border-right-0 rounded-0"
                                                   type="search" value="" placeholder="Որոնել"
                                                   id="example-search-input4" name="search">
                                        </div>
                                        <div class="col-auto">
                                            <button type="submit"
                                                    class="btn btn-outline-secondary border-left-0 rounded-0 rounded-right">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- Search content bar.// -->
                </div> <!-- navbar-collapse.// -->
            </div>
        </nav>
    </div>
    <!-- End Navbar menu  -->

    <!-- Navbar sidebar menu  -->
    <div id="modal_aside_right" class="modal fixed-left fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-aside" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <form action="/search-result/1" method="GET" class="widget__form-search-bar  ">
                        <div class="row no-gutters">
                            <div class="col">
                                <input class="form-control border-secondary border-right-0 rounded-0" value=""
                                       placeholder="Search">
                            </div>
                            <div class="col-auto">
                                <button type="submit"
                                        class="btn btn-outline-secondary border-left-0 rounded-0 rounded-right">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-footer">
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <a href="/">Գլխավոր</a>
                        </div>
                        <div class="col-md-12 mb-3">
                            <a href="/category/1">Լուրեր</a>
                        </div>
                        <div class="col-md-12 mb-3">
                            <a href="/about">Մեր մասին</a>
                        </div>
                        <div class="col-md-12 mb-3">
                            <a href="/contact">Կապ</a>
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- modal-bialog .// -->
    </div> <!-- modal.// -->
    <!-- End Navbar sidebar menu  -->
    <!-- End Navbar  -->
</header>